<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.great.childschool.mapper.CcTeacherDeptMapper">

    <!--   教师管理&#45;&#45;数据显示sql-->
    <!--    by 陈超-->
    <select id="findTableInf" parameterType="com.great.childschool.entity.CcTableInf" resultType="com.great.childschool.entity.TblWorker">
    select w.wid,w.wname,a.rname,w.wdate from tbl_worker w ,
        (select r.rname,s.wid from tbl_role r,
            (select * from tbl_worker_role ) s
                where r.rid=s.rid) a
        <where>
             w.wid=a.wid
            <if test="wname != null and wname !='' " >
                and w.wname like '%${wname}%'
            </if>
            <if test="rname != null and rname !='' " >
                and a.rname =#{rname}
            </if>

        </where>
        limit #{page} ,5

    </select>

    <!--   教师管理&#45;&#45;页数显示sql-->
    <!--    by 陈超-->
    <select id="totalPage" parameterType="com.great.childschool.entity.CcTableInf" resultType="com.great.childschool.entity.TblWorker">

        select w.wid,w.wname,a.rname,w.wdate from tbl_worker w ,
        (select r.rname,s.wid from tbl_role r,
        (select * from tbl_worker_role ) s
        where r.rid=s.rid) a
        <where>
             w.wid=a.wid
            <if test="wname != null and wname !='' " >
                and w.wname like '%${wname}%'
            </if>
            <if test="rname != null and rname !='' " >
                and a.rname =#{rname}
            </if>

        </where>
    </select>


<!--   教师管理&#45;&#45;删除sql-->
<!--    by 陈超-->
    <delete id="deleteteacher" parameterType="java.lang.Integer" >
            delete from tbl_worker where wid=#{wid}
        </delete>
    <delete id="deletemenu" parameterType="java.lang.Integer" >
            delete from tbl_menu_role where wid=#{wid}
        </delete>

    <!--   教师管理&#45;&#45;根据wName查询wid  sql-->
    <!--    by 陈超-->
    <select id="findwid" parameterType="java.lang.String" resultType="integer">
       select wid from tbl_worker where wname=#{wname}
    </select>


    <!--   教师管理&#45;&#45;增加教师sql-->
    <!--    by 陈超-->

    <insert id="addteacher" useGeneratedKeys="true" keyProperty="wid" parameterType="com.great.childschool.entity.TblWorker" >
        insert into tbl_worker    (wname,wpsw,wsex,wdate,sid)
            values(#{wname},123,'男',#{wdate},1)
    </insert>


    <!--   教师管理&#45;&#45;工作人员角色关系表 增加sql-->
    <!--    by 陈超-->
    <insert id="addworkerrole" parameterType="com.great.childschool.entity.TblWorkerRole" >
        insert into tbl_worker_role    (wid, rid)
            values(#{wid},#{rid})
    </insert>

    <!--   教师管理&#45;&#45;角色查询sql-->
    <!--    by 陈超-->
    <select id="findrole" resultType="com.great.childschool.entity.TblRole">
       select * from tbl_role
    </select>

    <!--   教师管理&#45;&#45;角色更新sql-->
    <!--    by 陈超-->
    <update id="updateteacher" parameterType="com.great.childschool.entity.TblWorker">

        update  tbl_worker set wname=#{wname},rname=#{rname} where wid=#{wid}
    </update>


</mapper>
















































